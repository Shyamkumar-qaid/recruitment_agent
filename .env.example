# Database Configuration
DB_TYPE=mysql  # Use sqlite for development without MySQL setup
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306
DB_NAME=candidate_db

# Uncomment and set these only if you have SSL certificates
# DB_SSL_CA=C:/path/to/ca.pem
# DB_SSL_CERT=C:/path/to/client-cert.pem
# DB_SSL_KEY=C:/path/to/client-key.pem

# LLM Configuration
# Default LLM Provider (ollama, openai, openrouter, huggingface)
LLM_PROVIDER=ollama

# Ollama Configuration
OLLAMA_MODEL=phi3
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI Configuration (optional)
# OPENAI_API_KEY=your_openai_api_key
# OPENAI_MODEL=gpt-3.5-turbo

# OpenRouter Configuration (optional)
# OPENROUTER_API_KEY=your_openrouter_api_key
# OPENROUTER_MODEL=openai/gpt-3.5-turbo

# Hugging Face Configuration (optional)
# HUGGINGFACE_API_KEY=your_huggingface_api_token
# HUGGINGFACE_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Vector Database (Pinecone)
PINECONE_API_KEY=your_api_key
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX_NAME=candidate-embeddings

# Logging and Monitoring
LOG_LEVEL=INFO
# SENTRY_DSN=your_sentry_dsn